<CascadingValue Value="this">
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <RouteViewManager RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        </Found>
        <NotFound>
            <RouteNotFoundManager DefaultLayout="@typeof(MainLayout)">
                <h4>The Router can't find the Route you have requested.</h4>
            </RouteNotFoundManager>
        </NotFound>
    </Router>
</CascadingValue>

@code {

    public Type Layout { get; private set; } = typeof(MainLayout);

    public async Task ChangeLayout(Type layout)
    {
        Layout = layout ?? Layout;
        await InvokeAsync(this.StateHasChanged);
    }


}
